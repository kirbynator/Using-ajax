<hr />
<div class="row">
  <div class="col s12 m6">
    <h2 class="center">Games</h2>
    <button class="btn" id="toggle">Show Form</button>
    <ul id="games-list">
      <% @games.each do |game| %>
        <li 
          class="game-item" 
          data-id=<%= game.id %>
          data-name="<%= game.name %>"
        >
          <%= game.name %> - <%= game.description %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col s12 m6" id="character-list">
    <h2 id="game">Characters In Game</h2>
    <ul id="characters">
    </ul>
  </div>
</div>